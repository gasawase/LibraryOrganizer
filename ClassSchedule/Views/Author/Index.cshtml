@model IEnumerable<Author>

@{
    ViewData["Title"] = "Author";
}

<div class="text-center">
    <h1 class="display-4">Authors</h1>
</div>

<a asp-action="Add" class="ml-3">Add Author</a>

<table class="table">
    <thead>
        <tr><th>First Name</th><th>Last Name</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (Author author in Model)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@author.AuthorId"
                       class="btn btn-outline-dark">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

