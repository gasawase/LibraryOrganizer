@model Title

@{
    ViewData["BookTitle"] = "Delete Book";
}

<h1 class="display-4">Delete Class</h1>
<ul class="list-group mb-2">
    <li class="list-group-item">
        <h4>@Model?.BookTitle @Model?.Id</h4>
    </li>
    <li class="list-group-item">
        Teacher: @Model?.Author.FullName
    </li>
    @*<li class="list-group-item">
        Day and Time: @Model?.Day.Name @Model?.MilitaryTime
    </li>*@
</ul>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-dark">Delete</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>
</form>
